{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
		// possible problems
        "array-callback-return": 1,
        "no-await-in-loop": 1,
        "no-constructor-return": 1,
        "no-duplicate-imports": 1,
        "no-promise-executor-return": 1,
        "no-prototype-builtins": 0, // override eslint:recommended
        "no-self-compare": 1,
        "no-template-curly-in-string": 1,
        "no-unreachable-loop": 1,
        "require-atomic-updates": 1,
        // suggestions
        "arrow-body-style": 1,
        "class-methods-use-this": 1,
        "default-case-last": 1,
        "default-param-last": 1,
        "dot-notation": 1,
        "eqeqeq": 1,
        "func-name-matching": 1,
        "new-cap": 1,
        "no-array-constructor": 1,
        "no-caller": 1,
        "no-else-return": 1,
        "no-empty-function": 1,
        "no-eval": 1,
        "no-extra-bind": 1,
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-invalid-this": 1,
        "no-iterator": 1,
        "no-labels": 1,
        "no-lone-blocks": 1,
        "no-lonely-if": 1,
        "no-loop-func": 1,
        "no-new-func": 1,
        "no-new-object": 1,
        "no-new-wrappers": 1,
        "no-proto": 1,
        "no-return-await": 1,
        "no-sequences": 1,
        "no-shadow": 1,
        "no-throw-literal": 1,
        "no-undef-init": 1,
        "no-unneeded-ternary": 1,
        "no-useless-call": 1,
        "no-useless-computed-key": 1,
        "no-useless-concat": 1,
        "no-useless-constructor": 1,
        "no-useless-rename": 1,
        "no-useless-return": 1,
        "no-var": 1,
        "no-void": 1,
        "object-shorthand": 1,
        "operator-assignment": 1,
        "prefer-arrow-callback": 1,
        "prefer-const": 1,
        // "prefer-exponentiation-operator": 1,
        "prefer-object-spread": 1,
        "prefer-spread": 1,
        // "prefer-template": 1,
        "sort-imports": 1,
        "sort-vars": 1,
		/* I will likely re-enable this in the future
        "strict": [
            "warn",
            "global"
        ],
		*/
        "symbol-description": 1,
        "yoda": [
            "warn",
            "never",
            {
                "onlyEquality": true
            }
        ],
		// layout and formatting
        "array-bracket-newline": [
            "warn",
            "consistent"
        ],
        "array-bracket-spacing": 1,
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "arrow-spacing": 1,
        "block-spacing": [
            "warn",
            "never"
        ],
        "brace-style": [
            "warn",
            "stroustrup"
        ],
        // "camelcase": 1, // temporarily disabled since some keywords actually kinda need this
        "comma-dangle": [
            "warn",
			{
				"arrays": "always-multiline",
				"objects": "always-multiline"
			}
        ],
        "comma-spacing": 1,
        "comma-style": 1,
        "dot-location": [
            "warn",
            "property"
        ],
        "eol-last": [
            "warn",
            "never"
        ],
        "func-call-spacing": 1,
        "generator-star-spacing": 1,
        "implicit-arrow-linebreak": 1,
        "indent": [
            "warn",
            "tab",
            {
                // this property seems bugged
                "FunctionDeclaration": {
                    "body": 1,
                    "parameters": 2
                },
                "SwitchCase": 1
            }
        ],
        "key-spacing": 1,
        "keyword-spacing": [
            "warn",
            {
                "overrides": {
                    "else": {
                        "after": true
                    }
                }
            }
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "lines-between-class-members": [
            "warn",
            "never"
        ],
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreUrls": true
            }
        ],
        "new-parens": 1,
        "no-extra-parens": 1,
        "no-multi-spaces": 1,
        "no-multiple-empty-lines": 1,
        "no-trailing-spaces": 1,
        "no-whitespace-before-property": 1,
        "nonblock-statement-body-position": [
            "warn",
            "below"
        ],
        "operator-linebreak": [
            "warn",
            "before"
        ],
        "padded-blocks": [
            "warn",
            "never"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": 1,
		"semi-spacing": 1,
		"semi-style": 1,
        "space-before-blocks": [
            "warn",
            {
                "functions": "never",
                "keywords": "never",
                "classes": "always"
            }
        ],
        "space-before-function-paren": [
            "warn",
            "never"
        ],
        "space-in-parens": 1,
        "switch-colon-spacing": 1,
        "template-curly-spacing": 1,
        "template-tag-spacing": 1,
        "unicode-bom": 1,
        "yield-star-spacing": [
			"warn",
			"before"
		]
    }
}